{
  "name": "aetherconnect",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "next lint",
    "dev": "concurrently \"pnpm dev:auth\" \"pnpm dev:gateway\" \"pnpm dev:message\"",
    "dev:prod": "NODE_ENV=production pnpm start",
    "clean": "pnpm -r run clean",
    "cleanm": "pnpm -r run cleanmodules",
    "start": "concurrently \"pnpm start:auth\" \"pnpm start:gateway\" \"pnpm start:message\"",
    "start:auth": "cd services/auth-service-nestjs && pnpm exec nest start",
    "start:gateway": "cd services/api-gateway && pnpm exec nest start",
    "start:message": "cd services/message-service && pnpm exec nest start",
    "dev:auth": "cd services/auth-service-nestjs && pnpm exec nest start --watch",
    "dev:gateway": "cd services/api-gateway && pnpm exec nest start --watch",
    "dev:message": "cd services/message-service && pnpm exec nest start --watch",
    "dev:frontend": "cd AetherConnect-Frontend && pnpm dev",
    "build": "pnpm -r run build",
    "build:frontend": "cd AetherConnect-Frontend && pnpm build",
    "build:backend": "pnpm --filter './services/**' run build",
    "docker:build": "docker build -t aetherconnect .",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:up:auth": "docker run -d -p 3001:3001 --name aether-auth-test aether-auth",
    "docker:up:gateway": "docker run -d -p 3000:3000 --name aether-gateway-test aether-gateway",
    "docker:up:message": "docker run -d -p 3002:3002 --name aether-message-test aether-message",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.yml restart",
    "docker:rebuild": "docker-compose -f docker-compose.yml down && docker-compose -f docker-compose.yml build --no-cache && docker-compose -f docker-compose.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.yml up -d --build",
    "docker:clean": "docker-compose -f docker-compose.yml down -v --rmi all --remove-orphans",
    "docker:status": "docker-compose -f docker-compose.yml ps",
    "docker:shell": "docker-compose -f docker-compose.yml exec aetherconnect sh",
    "host:simulate": "pnpm docker:rebuild && pnpm docker:logs",
    "host:start": "pnpm docker:up && echo 'Services running at: http://localhost:3000 (Gateway), http://localhost:3001 (Auth), http://localhost:3002 (Message)'",
    "host:stop": "pnpm docker:down",
    "host:monitor": "pnpm docker:logs"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint-plugin-nestjs": "^1.2.3"
  },
  "dependencies": {
    "url": "^0.11.4"
  }
}
