
# This is an example environment file.
# In a real deployment, these values should be set in the environment itself,
# not in a file. For local development, you can copy this file to .env
# and fill in the values.

# --- General ---
NODE_ENV=development
LOG_LEVEL=info
DEBUG=

# --- API Gateway ---
API_GATEWAY_PORT=3000
FRONTEND_URL=http://localhost:3004

# --- Auth Service ---
AUTH_SERVICE_GRPC_URL=localhost:50001
AUTH_SERVICE_GRPC_PORT=50001
AUTH_SERVICE_HTTP_PORT=3002
JWT_SECRET=your-super-secret-key
JWT_WS_SECRET=your-super-secret-ws-key

# --- Message Service ---
MESSAGE_SERVICE_GRPC_URL=localhost:50002
MESSAGE_SERVICE_GRPC_PORT=50002
MESSAGE_SERVICE_HTTP_PORT=3001

# --- Databases ---
POSTGRES_PASSWORD=
MONGODB_URL=
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# --- Railway Specific ---
RAILWAY_STATIC_URL=
